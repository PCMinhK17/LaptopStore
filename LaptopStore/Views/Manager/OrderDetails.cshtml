@model LaptopStore.Models.Order

@{
    ViewData["Title"] = $"Chi tiết đơn hàng #{Model.Id:D6}";
    ViewData["Subtitle"] = "Thông tin chi tiết đơn đặt hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
    var statusClass = Model.Status switch
    {
        "pending" => "badge-warning",
        "processing" => "badge-info",
        "shipping" => "badge-primary",
        "delivered" => "badge-success",
        "cancelled" => "badge-danger",
        _ => "badge-light"
    };
    var statusText = Model.Status switch
    {
        "pending" => "Chờ xác nhận",
        "processing" => "Đang xử lý",
        "shipping" => "Đang giao hàng",
        "delivered" => "Đã giao hàng",
        "cancelled" => "Đã hủy",
        _ => Model.Status
    };
    var paymentClass = Model.PaymentStatus switch
    {
        "paid" => "badge-success",
        "unpaid" => "badge-warning",
        "refunded" => "badge-info",
        _ => "badge-light"
    };
    var paymentText = Model.PaymentStatus switch
    {
        "paid" => "Đã thanh toán",
        "unpaid" => "Chưa thanh toán",
        "refunded" => "Đã hoàn tiền",
        _ => Model.PaymentStatus
    };
    var paymentMethodText = Model.PaymentMethod switch
    {
        "cod" => "Thanh toán khi nhận hàng (COD)",
        "vietqr" => "Chuyển khoản ngân hàng",
        "vnpay" => "Ví điện tử VNPay",
        _ => Model.PaymentMethod
    };
}

<!-- Breadcrumb & Actions -->
<div class="mb-4 d-flex align-items-center justify-content-between flex-wrap gap-3">
    <a href="@Url.Action("Index")" class="btn btn-sm btn-secondary">
        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
    </a>
    <div class="d-flex gap-2">
        <button type="button" class="btn btn-secondary" onclick="window.print()">
            <i class="fas fa-print me-1"></i> In đơn hàng
        </button>
        @if (Model.Status != "cancelled" && Model.Status != "delivered")
        {
            <button type="button" class="btn btn-outline-danger" onclick="cancelOrder()">
                <i class="fas fa-times me-1"></i> Hủy đơn
            </button>
        }
    </div>
</div>

<div class="row g-4">
    <!-- Order Summary -->
    <div class="col-12 col-lg-8">
        <!-- Order Status -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-info-circle"></i>
                    Thông tin đơn hàng #@Model.Id.ToString("D6")
                </h5>
                <span class="badge @statusClass px-3 py-2" style="font-size: 0.9rem;">
                    @statusText
                </span>
            </div>
            <div class="card-body">
                <div class="order-timeline">
                    <div class="timeline-step @(Model.Status == "pending" || Model.Status == "processing" || Model.Status == "shipping" || Model.Status == "delivered" ? "completed" : "") @(Model.Status == "pending" ? "active" : "")">
                        <div class="timeline-step-dot">
                            <i class="fas fa-receipt"></i>
                        </div>
                        <div class="timeline-step-label">Đặt hàng</div>
                    </div>
                    <div class="timeline-connector @(Model.Status == "processing" || Model.Status == "shipping" || Model.Status == "delivered" ? "completed" : "")"></div>
                    <div class="timeline-step @(Model.Status == "processing" || Model.Status == "shipping" || Model.Status == "delivered" ? "completed" : "") @(Model.Status == "processing" ? "active" : "")">
                        <div class="timeline-step-dot">
                            <i class="fas fa-cog"></i>
                        </div>
                        <div class="timeline-step-label">Xử lý</div>
                    </div>
                    <div class="timeline-connector @(Model.Status == "shipping" || Model.Status == "delivered" ? "completed" : "")"></div>
                    <div class="timeline-step @(Model.Status == "shipping" || Model.Status == "delivered" ? "completed" : "") @(Model.Status == "shipping" ? "active" : "")">
                        <div class="timeline-step-dot">
                            <i class="fas fa-shipping-fast"></i>
                        </div>
                        <div class="timeline-step-label">Giao hàng</div>
                    </div>
                    <div class="timeline-connector @(Model.Status == "delivered" ? "completed" : "")"></div>
                    <div class="timeline-step @(Model.Status == "delivered" ? "completed active" : "")">
                        <div class="timeline-step-dot">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="timeline-step-label">Hoàn thành</div>
                    </div>
                </div>

                @if (Model.Status != "cancelled" && Model.Status != "delivered")
                {
                    <div class="mt-4 pt-4 border-top">
                        <div class="d-flex align-items-center gap-3 flex-wrap">
                            <span class="text-muted">Cập nhật trạng thái:</span>
                            @if (Model.Status == "pending")
                            {
                                <button type="button" class="btn btn-sm btn-primary" onclick="updateStatus('processing')">
                                    <i class="fas fa-check me-1"></i> Xác nhận đơn
                                </button>
                            }
                            @if (Model.Status == "processing")
                            {
                                <button type="button" class="btn btn-sm btn-info" onclick="updateStatus('shipping')">
                                    <i class="fas fa-shipping-fast me-1"></i> Chuyển giao hàng
                                </button>
                            }
                            @if (Model.Status == "shipping")
                            {
                                <button type="button" class="btn btn-sm btn-success" onclick="updateStatus('delivered')">
                                    <i class="fas fa-check-double me-1"></i> Đã giao hàng
                                </button>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Order Items -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-box"></i>
                    Sản phẩm đặt mua
                    <span class="badge badge-light ms-2">@Model.OrderDetails?.Count sản phẩm</span>
                </h5>
            </div>
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th class="text-center">Số lượng</th>
                            <th class="text-end">Đơn giá</th>
                            <th class="text-end">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.OrderDetails != null)
                        {
                            foreach (var item in Model.OrderDetails)
                            {
                                var product = item.Product;
                                var thumbnail = product?.ProductImages?.FirstOrDefault(i => i.IsThumbnail ?? false)?.ImageUrl ?? "/images/default-product.png";
                                var itemTotal = item.Quantity * item.Price;
                                
                                <tr>
                                    <td>
                                        <div class="table-product">
                                            <div class="table-product-img">
                                                <img src="@thumbnail" alt="@product?.Name" />
                                            </div>
                                            <div class="table-product-info">
                                                <div class="table-product-name">@product?.Name</div>
                                                <div class="table-product-sku">SKU: @product?.Sku</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge badge-light">x@item.Quantity</span>
                                    </td>
                                    <td class="text-end">@item.Price.ToString("#,##0") ₫</td>
                                    <td class="text-end fw-bold">@itemTotal.ToString("#,##0") ₫</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <div class="row justify-content-end">
                    <div class="col-12 col-md-6">
                        <div class="d-flex flex-column gap-2">
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Tạm tính:</span>
                                <span>@Model.Subtotal?.ToString("#,##0") ₫</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Phí vận chuyển:</span>
                                <span>@(Model.ShippingFee > 0 ? Model.ShippingFee.Value.ToString("#,##0") + " ₫" : "Miễn phí")</span>
                            </div>
                            <div class="d-flex justify-content-between pt-2 border-top">
                                <span class="fw-bold">Tổng cộng:</span>
                                <span class="fw-bold text-primary" style="font-size: 1.25rem;">@Model.TotalMoney.ToString("#,##0") ₫</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Order Details Sidebar -->
    <div class="col-12 col-lg-4">
        <!-- Customer Info -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-user"></i>
                    Thông tin khách hàng
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex flex-column gap-3">
                    <div>
                        <label class="form-label mb-1">Họ tên</label>
                        <div class="fw-semibold">@Model.FullName</div>
                    </div>
                    <div>
                        <label class="form-label mb-1">Số điện thoại</label>
                        <div class="fw-semibold">
                            <a href="tel:@Model.PhoneNumber" style="color: var(--text-primary); text-decoration: none;">
                                <i class="fas fa-phone-alt text-muted me-2"></i>@Model.PhoneNumber
                            </a>
                        </div>
                    </div>
                    @if (Model.User != null)
                    {
                        <div>
                            <label class="form-label mb-1">Email</label>
                            <div>
                                <a href="mailto:@Model.User.Email" style="color: var(--primary-600); text-decoration: none;">
                                    <i class="fas fa-envelope text-muted me-2"></i>@Model.User.Email
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Shipping Info -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-map-marker-alt"></i>
                    Địa chỉ giao hàng
                </h5>
            </div>
            <div class="card-body">
                <p class="mb-0">@Model.Address</p>
                @if (!string.IsNullOrEmpty(Model.Note))
                {
                    <div class="mt-3 pt-3 border-top">
                        <label class="form-label mb-1">Ghi chú</label>
                        <p class="mb-0 text-muted">@Model.Note</p>
                    </div>
                }
            </div>
        </div>

        <!-- Payment Info -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-credit-card"></i>
                    Thanh toán
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex flex-column gap-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted">Phương thức</span>
                        <span class="fw-semibold">@paymentMethodText</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted">Trạng thái</span>
                        <span class="badge @paymentClass">@paymentText</span>
                    </div>
                    @if (Model.PaymentStatus == "unpaid" && Model.Status != "cancelled")
                    {
                        <div class="mt-2">
                            <button type="button" class="btn btn-sm btn-success w-100" onclick="markAsPaid()">
                                <i class="fas fa-check me-1"></i> Đánh dấu đã thanh toán
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Order Meta -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-clock"></i>
                    Thời gian
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex flex-column gap-2">
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Ngày đặt</span>
                        <span>@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .order-timeline {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px 0;
    }
    
    .timeline-step {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        flex: 0 0 auto;
    }
    
    .timeline-step-dot {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: var(--bg-tertiary);
        border: 2px solid var(--border-color);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-muted);
        font-size: 1.1rem;
        transition: all var(--transition-normal);
    }
    
    .timeline-step.completed .timeline-step-dot {
        background: var(--success-100);
        border-color: var(--success-500);
        color: var(--success-600);
    }
    
    .timeline-step.active .timeline-step-dot {
        background: var(--primary-100);
        border-color: var(--primary-500);
        color: var(--primary-600);
        box-shadow: 0 0 0 4px var(--primary-100);
    }
    
    .timeline-step-label {
        font-size: 0.8rem;
        color: var(--text-muted);
        font-weight: 500;
    }
    
    .timeline-step.completed .timeline-step-label,
    .timeline-step.active .timeline-step-label {
        color: var(--text-primary);
    }
    
    .timeline-connector {
        flex: 1;
        height: 3px;
        background: var(--border-color);
        margin: 0 8px;
        margin-bottom: 30px;
        border-radius: 2px;
    }
    
    .timeline-connector.completed {
        background: var(--success-500);
    }
    
    @@media (max-width: 576px) {
        .timeline-step-dot {
            width: 36px;
            height: 36px;
            font-size: 0.9rem;
        }
        
        .timeline-step-label {
            font-size: 0.7rem;
        }
    }
    
    @@media print {
        .btn, .sidebar, .topbar {
            display: none !important;
        }
        
        .main-content {
            margin-left: 0 !important;
            padding-top: 0 !important;
        }
    }
</style>

@section Scripts {
    <script>
        function updateStatus(newStatus) {
            const statusText = {
                'processing': 'xác nhận',
                'shipping': 'chuyển sang giao hàng',
                'delivered': 'đánh dấu đã giao'
            };
            
            if (!confirm(`Bạn có chắc chắn muốn ${statusText[newStatus]} đơn hàng này?`)) {
                return;
            }

            fetch('/OrderManagement/UpdateStatus', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: `id=@Model.Id&status=${newStatus}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Có lỗi xảy ra');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi cập nhật trạng thái');
            });
        }
        
        function cancelOrder() {
            if (!confirm('Bạn có chắc chắn muốn hủy đơn hàng này? Hành động này không thể hoàn tác.')) {
                return;
            }

            fetch('/OrderManagement/UpdateStatus', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: `id=@Model.Id&status=cancelled`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Có lỗi xảy ra');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi hủy đơn hàng');
            });
        }
        
        function markAsPaid() {
            if (!confirm('Xác nhận đơn hàng đã được thanh toán?')) {
                return;
            }

            fetch('/OrderManagement/UpdatePaymentStatus', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: `id=@Model.Id&paymentStatus=paid`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Có lỗi xảy ra');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi cập nhật thanh toán');
            });
        }
    </script>
}
