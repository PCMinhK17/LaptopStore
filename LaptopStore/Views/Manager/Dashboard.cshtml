@model LaptopStore.Controllers.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    ViewData["Subtitle"] = "Tổng quan hoạt động hệ thống";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Revenue Cards -->
<div class="row g-4 mb-4">
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="stat-card stat-success animate-slideUp">
            <div class="stat-icon">
                <i class="fas fa-dollar-sign"></i>
            </div>
            <div class="stat-details">
                <div class="stat-label">Doanh thu tháng này</div>
                <div class="stat-value">@((Model.MonthlyRevenue / 1000000).ToString("F1"))M</div>
                <div class="stat-change positive">
                    <i class="fas fa-chart-line"></i>
                    <span>VND</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="stat-card stat-primary animate-slideUp">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-details">
                <div class="stat-label">Tổng khách hàng</div>
                <div class="stat-value">@Model.TotalUsers.ToString("N0")</div>
                <div class="stat-change positive">
                    <i class="fas fa-user-plus"></i>
                    <span>+@Model.NewUsersThisMonth tháng này</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="stat-card stat-info animate-slideUp">
            <div class="stat-icon">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <div class="stat-details">
                <div class="stat-label">Tổng đơn hàng</div>
                <div class="stat-value">@Model.TotalOrders.ToString("N0")</div>
                <div class="stat-change">
                    <span class="text-success">@Model.CompletedOrders hoàn thành</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="stat-card stat-warning animate-slideUp">
            <div class="stat-icon">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stat-details">
                <div class="stat-label">Chờ xử lý</div>
                <div class="stat-value">@Model.PendingOrders.ToString("N0")</div>
                @if (Model.PendingOrders > 0)
                {
                    <div class="stat-change negative">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>Cần xử lý ngay</span>
                    </div>
                }
                else
                {
                    <div class="stat-change">
                        <span class="text-success">Không có đơn chờ</span>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row g-4 mb-4">
    <div class="col-12 col-xl-8">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-chart-area"></i>
                    Doanh thu 7 ngày gần đây
                </h5>
                <a href="@Url.Action("Index", "Reports")" class="btn btn-sm btn-secondary">
                    Xem chi tiết <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
            <div class="card-body">
                <div class="chart-container" style="height: 300px;">
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-xl-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-chart-pie"></i>
                    Tình trạng đơn hàng
                </h5>
            </div>
            <div class="card-body d-flex flex-column">
                <div class="chart-container flex-grow-1" style="max-height: 200px;">
                    <canvas id="orderStatusChart"></canvas>
                </div>
                <div class="mt-3">
                    <div class="d-flex flex-column gap-2">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center gap-2">
                                <span class="status-dot" style="background: #f59e0b;"></span>
                                <span class="small">Chờ xác nhận</span>
                            </div>
                            <span class="fw-bold">@Model.PendingOrders</span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center gap-2">
                                <span class="status-dot" style="background: #3b82f6;"></span>
                                <span class="small">Đang xử lý</span>
                            </div>
                            <span class="fw-bold">@Model.ProcessingOrders</span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center gap-2">
                                <span class="status-dot" style="background: #8b5cf6;"></span>
                                <span class="small">Đang giao</span>
                            </div>
                            <span class="fw-bold">@Model.ShippingOrders</span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center gap-2">
                                <span class="status-dot" style="background: #10b981;"></span>
                                <span class="small">Hoàn thành</span>
                            </div>
                            <span class="fw-bold">@Model.CompletedOrders</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content Row -->
<div class="row g-4">
    <!-- Recent Orders -->
    <div class="col-12 col-xl-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-receipt"></i>
                    Đơn hàng gần đây
                </h5>
                <a href="@Url.Action("Index", "OrderManagement")" class="btn btn-sm btn-secondary">
                    Xem tất cả <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Mã đơn</th>
                            <th>Khách hàng</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.RecentOrders != null && Model.RecentOrders.Any())
                        {
                            @foreach (var order in Model.RecentOrders)
                            {
                                var statusClass = order.Status switch
                                {
                                    "pending" => "badge-warning",
                                    "processing" => "badge-info",
                                    "shipping" => "badge-primary",
                                    "delivered" => "badge-success",
                                    "cancelled" => "badge-danger",
                                    _ => "badge-light"
                                };
                                var statusText = order.Status switch
                                {
                                    "pending" => "Chờ xác nhận",
                                    "processing" => "Đang xử lý",
                                    "shipping" => "Đang giao",
                                    "delivered" => "Đã giao",
                                    "cancelled" => "Đã hủy",
                                    _ => order.Status
                                };
                                <tr>
                                    <td>
                                        <span class="fw-semibold">#@order.Id.ToString("D6")</span>
                                    </td>
                                    <td>
                                        <div class="table-user">
                                            <div class="table-user-avatar">
                                                @(order.User?.FullName?.Substring(0, 1).ToUpper() ?? "?")
                                            </div>
                                            <div class="table-user-info">
                                                <div class="table-user-name">@order.User?.FullName</div>
                                                <div class="table-user-email">@order.User?.PhoneNumber</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>@order.CreatedAt?.ToString("dd/MM/yyyy")</div>
                                        <small class="text-muted">@order.CreatedAt?.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        <span class="fw-bold text-primary">@order.TotalMoney.ToString("#,##0") ₫</span>
                                    </td>
                                    <td>
                                        <span class="badge @statusClass">
                                            @statusText
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <a href="@Url.Action("Details", "OrderManagement", new { id = order.Id })" 
                                           class="btn btn-icon btn-sm btn-secondary" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6">
                                    <div class="empty-state">
                                        <div class="empty-state-icon">
                                            <i class="fas fa-inbox"></i>
                                        </div>
                                        <div class="empty-state-title">Chưa có đơn hàng nào</div>
                                        <p class="empty-state-text">Các đơn hàng mới sẽ hiển thị tại đây</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Right Column -->
    <div class="col-12 col-xl-4">
        <!-- Quick Actions -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-bolt"></i>
                    Thao tác nhanh
                </h5>
            </div>
            <div class="card-body p-0">
                <div style="display: flex; flex-direction: column; gap: 1px; background: var(--border-color);">
                    <a href="@Url.Action("Create", "UserManagement")" class="quick-action" style="background: var(--card-bg);">
                        <div class="quick-action-icon primary">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <div class="quick-action-content">
                            <div class="quick-action-title">Thêm nhân viên</div>
                            <div class="quick-action-desc">Tạo tài khoản nhân viên mới</div>
                        </div>
                        <i class="fas fa-chevron-right text-muted"></i>
                    </a>
                    <a href="@Url.Action("AddNewProduct", "ProductManagement")" class="quick-action" style="background: var(--card-bg);">
                        <div class="quick-action-icon success">
                            <i class="fas fa-plus-circle"></i>
                        </div>
                        <div class="quick-action-content">
                            <div class="quick-action-title">Thêm sản phẩm</div>
                            <div class="quick-action-desc">Nhập sản phẩm mới vào kho</div>
                        </div>
                        <i class="fas fa-chevron-right text-muted"></i>
                    </a>
                    <a href="@Url.Action("Index", "Reports")" class="quick-action" style="background: var(--card-bg);">
                        <div class="quick-action-icon info">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <div class="quick-action-content">
                            <div class="quick-action-title">Xem thống kê</div>
                            <div class="quick-action-desc">Báo cáo doanh thu chi tiết</div>
                        </div>
                        <i class="fas fa-chevron-right text-muted"></i>
                    </a>
                    <a href="@Url.Action("Index", "Settings")" class="quick-action" style="background: var(--card-bg);">
                        <div class="quick-action-icon" style="background: var(--bg-tertiary); color: var(--text-secondary);">
                            <i class="fas fa-cog"></i>
                        </div>
                        <div class="quick-action-content">
                            <div class="quick-action-title">Cài đặt</div>
                            <div class="quick-action-desc">Tùy chỉnh giao diện hệ thống</div>
                        </div>
                        <i class="fas fa-chevron-right text-muted"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Low Stock Products -->
        @if (Model.LowStockProducts != null && Model.LowStockProducts.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="fas fa-exclamation-triangle text-warning"></i>
                        Sắp hết hàng
                    </h5>
                    <span class="badge badge-warning">@Model.LowStockProducts.Count</span>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var product in Model.LowStockProducts)
                        {
                            <a href="@Url.Action("Details", "ProductManagement", new { id = product.Id })" 
                               class="list-group-item list-group-item-action d-flex align-items-center gap-3">
                                <img src="@(product.ProductImages.FirstOrDefault()?.ImageUrl ?? "/images/no-image.png")" alt="@product.Name" 
                                     style="width: 48px; height: 48px; object-fit: cover; border-radius: var(--radius-md);">
                                <div class="flex-grow-1 min-width-0">
                                    <div class="fw-medium text-truncate" style="max-width: 180px;">@product.Name</div>
                                    <small class="text-danger">
                                        <i class="fas fa-cube me-1"></i>
                                        Còn @product.StockQuantity sản phẩm
                                    </small>
                                </div>
                            </a>
                        }
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Index", "ProductManagement")" class="btn btn-sm btn-secondary w-100">
                        Quản lý kho hàng <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body text-center py-4">
                    <div class="mb-3">
                        <span style="display: inline-flex; align-items: center; justify-content: center; width: 60px; height: 60px; border-radius: 50%; background: var(--success-100); color: var(--success-600);">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </span>
                    </div>
                    <h6>Tồn kho ổn định</h6>
                    <p class="text-muted mb-0 small">Tất cả sản phẩm đều có số lượng tốt</p>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .list-group-item {
        border: none;
        border-bottom: 1px solid var(--border-color);
        padding: 0.875rem 1rem;
        transition: background var(--transition-fast);
    }
    
    .list-group-item:last-child {
        border-bottom: none;
    }
    
    .list-group-item:hover {
        background: var(--bg-secondary);
    }
    
    .chart-container {
        position: relative;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Animation for stat cards
        document.addEventListener('DOMContentLoaded', function() {
            const statCards = document.querySelectorAll('.stat-card');
            statCards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
            });
        });
        
        // Revenue Chart
        const revenueCtx = document.getElementById('revenueChart');
        if (revenueCtx) {
            const chartLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.ChartLabels ?? new List<string>()));
            const chartData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.ChartData ?? new List<decimal>()));
            
            new Chart(revenueCtx, {
                type: 'line',
                data: {
                    labels: chartLabels,
                    datasets: [{
                        label: 'Doanh thu',
                        data: chartData,
                        borderColor: 'rgb(99, 102, 241)',
                        backgroundColor: 'rgba(99, 102, 241, 0.1)',
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: 'rgb(99, 102, 241)',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 4,
                        pointHoverRadius: 6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            padding: 12,
                            callbacks: {
                                label: function(context) {
                                    return 'Doanh thu: ' + (context.raw / 1000000).toFixed(1) + 'M ₫';
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: 'rgba(0, 0, 0, 0.05)' },
                            ticks: {
                                callback: function(value) {
                                    return (value / 1000000).toFixed(0) + 'M';
                                }
                            }
                        },
                        x: { grid: { display: false } }
                    }
                }
            });
        }
        
        // Order Status Chart
        const orderStatusCtx = document.getElementById('orderStatusChart');
        if (orderStatusCtx) {
            new Chart(orderStatusCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Chờ xác nhận', 'Đang xử lý', 'Đang giao', 'Hoàn thành'],
                    datasets: [{
                        data: [@Model.PendingOrders, @Model.ProcessingOrders, @Model.ShippingOrders, @Model.CompletedOrders],
                        backgroundColor: ['#f59e0b', '#3b82f6', '#8b5cf6', '#10b981'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: {
                        legend: { display: false }
                    }
                }
            });
        }
    </script>
}
