@model LaptopStore.Models.Cart
@{
    ViewData["Title"] = "Giỏ hàng của bạn";
    var cartItems = Model?.CartItems ?? new List<CartItem>();
    var itemCount = cartItems.Count;
    decimal totalAmount = 0;
    if (cartItems.Any())
    {
        totalAmount = cartItems.Sum(ci => (ci.Quantity ?? 0) * (ci.Product?.Price ?? 0));
    }

    // Estimated delivery: hôm nay + processing + 3-5 ngày
    var processingDays = 1;
    var shippingMinDays = 3;
    var shippingMaxDays = 5;
    var today = DateTime.Now.Date;
    var estFrom = today.AddDays(processingDays + shippingMinDays);
    var estTo = today.AddDays(processingDays + shippingMaxDays);
}

<link rel="stylesheet" href="~/css/cart.css" />

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

<section class="h-100 gradient-custom">
    <div class="container py-5">

        <div class="row mb-4">
            <div class="col-12">
                <h2 class="fw-bold text-dark">Giỏ hàng của bạn</h2>
                <p class="text-muted">Bạn đang có @itemCount sản phẩm trong giỏ hàng</p>
            </div>
        </div>

        <div class="row d-flex justify-content-center my-4">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Danh sách sản phẩm</h5>
                    </div>
                    <div class="card-body">
                        @if (cartItems.Any())
                        {
                            @for (int i = 0; i < cartItems.Count; i++)
                            {
                                var item = cartItems.ElementAt(i);
                                var product = item.Product;
                                var quantity = item.Quantity ?? 1;
                                var price = product?.Price ?? 0;
                                var itemTotal = quantity * price;
                                
                                // Lấy ảnh sản phẩm (ưu tiên thumbnail, nếu không có thì lấy ảnh đầu tiên)
                                var productImage = product?.ProductImages?.FirstOrDefault(pi => pi.IsThumbnail == true) 
                                    ?? product?.ProductImages?.FirstOrDefault();
                                var imageUrl = productImage?.ImageUrl ?? "https://via.placeholder.com/300";

                                <div class="row align-items-center" id="cart-item-row-@item.Id">
                                    <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                        <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                                            <img src="@imageUrl"
                                                 class="w-100" alt="@product?.Name" />
                                            <a href="#!">
                                                <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                            </a>
                                        </div>
                                    </div>

                                    <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                        <p class="product-name">@product?.Name</p>
                                        @if (product?.StockQuantity.HasValue == true)
                                        {
                                            var stockQty = product.StockQuantity.Value;
                                            var stockClass = stockQty <= 5 ? "text-danger" : stockQty <= 10 ? "text-warning" : "text-muted";
                                            <p class="small mb-1 @stockClass" style="font-size: 0.85rem;">
                                                <i class="fas fa-box me-1"></i>
                                                Còn lại: <span class="fw-semibold">@stockQty</span> sản phẩm
                                            </p>
                                        }
                                        @if (!string.IsNullOrEmpty(product?.Cpu) || !string.IsNullOrEmpty(product?.Ram))
                                        {
                                            <p class="text-muted small mb-1">
                                                @if (!string.IsNullOrEmpty(product.Cpu))
                                                {
                                                    <text>CPU: @product.Cpu</text>
                                                }
                                                @if (!string.IsNullOrEmpty(product.Cpu) && !string.IsNullOrEmpty(product.Ram))
                                                {
                                                    <text> • </text>
                                                }
                                                @if (!string.IsNullOrEmpty(product.Ram))
                                                {
                                                    <text>RAM: @product.Ram</text>
                                                }
                                            </p>
                                        }
                                        @if (!string.IsNullOrEmpty(product?.HardDrive))
                                        {
                                            <p class="text-muted small mb-3">Ổ cứng: @product.HardDrive</p>
                                        }

                                        <div class="d-flex gap-2">
                                            <button type="button" class="btn btn-action btn-trash" title="Xóa" onclick="removeCartItem(@item.Id)">
                                                <i class="fas fa-trash-alt"></i> Xóa
                                            </button>
                                            <button type="button" class="btn btn-action btn-heart" title="Yêu thích">
                                                <i class="fas fa-heart"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                        <div class="d-flex mb-4 flex-column align-items-start align-items-md-center">
                                            <div class="quantity-input-group mb-2">
                                                <button type="button" onclick="decreaseQuantity(@item.Id, @price, @(product?.StockQuantity ?? 0))">
                                                    <i class="fas fa-minus small"></i>
                                                </button>
                                                <input id="qty@(item.Id)" min="1" name="quantity" value="@quantity" type="number" 
                                                       data-price="@price"
                                                       data-stock="@(product?.StockQuantity ?? 0)"
                                                       max="@(product?.StockQuantity ?? 0)"
                                                       onchange="updateQuantityFromInput(@item.Id, this.value, @price)" />
                                                <button type="button" id="btn-increase-@item.Id" 
                                                        onclick="increaseQuantity(@item.Id, @price, @(product?.StockQuantity ?? 0))"
                                                        @if ((product?.StockQuantity ?? 0) > 0 && quantity >= (product?.StockQuantity ?? 0)) { <text>disabled</text> }>
                                                    <i class="fas fa-plus small"></i>
                                                </button>
                                            </div>

                                            <p class="text-start text-md-center price-tag mb-0" id="item-total-@item.Id">
                                                @itemTotal.ToString("N0") đ
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                
                                @if (i < cartItems.Count - 1)
                                {
                                    <hr class="my-4" style="opacity: 0.1" />
                                }
                            }
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <p class="text-muted">Giỏ hàng của bạn đang trống</p>
                                <a href="/" class="btn btn-primary">Tiếp tục mua sắm</a>
                            </div>
                        }
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-body">
                        <p><strong>Dự kiến giao hàng</strong></p>
                        <p class="mb-0 text-success"><i class="fas fa-truck me-2"></i>@estFrom.ToString("dd.MM.yyyy") - @estTo.ToString("dd.MM.yyyy") (Miễn phí vận chuyển)</p>
                    </div>
                </div>

                <div class="card mb-4 mb-lg-0">
                    <div class="card-body payment-icons">
                        <p><strong>Chấp nhận thanh toán</strong></p>
                        <img class="me-2" width="45px" src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg" alt="Visa" />
                        <img class="me-2" width="45px" src="https://img.icons8.com/color/48/mo-mo.png" alt="Momo" />
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Tổng đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0 summary-item">
                                Tạm tính
                                <span id="subtotal-amount">@totalAmount.ToString("N0") đ</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0 summary-item">
                                Phí vận chuyển
                                <span class="text-success">Miễn phí</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3 summary-item">
                                <div>
                                    <strong>Tổng cộng</strong>
                                    <p class="mb-0 text-muted small">(Đã bao gồm VAT)</p>
                                </div>
                                <span class="summary-total" id="total-amount"><strong>@totalAmount.ToString("N0") đ</strong></span>
                            </li>
                        </ul>

                        @if (cartItems.Any())
                        {
                            <!-- trỏ tới OrderController -->
                            <a href="/Order/Checkout@(Model?.UserId.HasValue == true ? "?userId=" + Model.UserId : "")" class="btn btn-primary btn-checkout btn-lg btn-block w-100 text-decoration-none">
                                TIẾN HÀNH THANH TOÁN
                            </a>
                        }

                        <div class="mt-3 text-center">
                            <a href="/" class="text-muted text-decoration-none small"><i class="fas fa-arrow-left me-1"></i> Tiếp tục mua sắm</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function formatCurrency(amount) {
        return new Intl.NumberFormat('vi-VN').format(amount) + ' đ';
    }

    function updateQuantityFromInput(cartItemId, newQuantity, price) {
        var input = document.getElementById('qty' + cartItemId);
        var stockQuantity = parseInt(input.getAttribute('data-stock')) || 0;
        var quantity = parseInt(newQuantity);
        
        if (isNaN(quantity) || quantity < 1) {
            quantity = 1;
            input.value = 1;
        }
        
        if (stockQuantity > 0 && quantity > stockQuantity) {
            alert('Số lượng vượt quá tồn kho. Chỉ còn ' + stockQuantity + ' sản phẩm');
            quantity = stockQuantity;
            input.value = stockQuantity;
        }
        
        updateQuantity(cartItemId, quantity, price);
        updateIncreaseButtonState(cartItemId, quantity, stockQuantity);
    }

    function increaseQuantity(cartItemId, price, stockQuantity) {
        var input = document.getElementById('qty' + cartItemId);
        var currentQty = parseInt(input.value) || 1;
        
        if (stockQuantity > 0 && currentQty >= stockQuantity) {
            alert('Số lượng vượt quá tồn kho. Chỉ còn ' + stockQuantity + ' sản phẩm');
            return;
        }
        
        var newQty = currentQty + 1;
        input.value = newQty;
        updateQuantity(cartItemId, newQty, price);
        updateIncreaseButtonState(cartItemId, newQty, stockQuantity);
    }

    function decreaseQuantity(cartItemId, price, stockQuantity) {
        var input = document.getElementById('qty' + cartItemId);
        var currentQty = parseInt(input.value) || 1;
        if (currentQty > 1) {
            var newQty = currentQty - 1;
            input.value = newQty;
            updateQuantity(cartItemId, newQty, price);
            updateIncreaseButtonState(cartItemId, newQty, stockQuantity);
        }
    }

    function updateIncreaseButtonState(cartItemId, currentQty, stockQuantity) {
        var btnIncrease = document.getElementById('btn-increase-' + cartItemId);
        if (btnIncrease) {
            // Chỉ disable nếu có giới hạn tồn kho và đã đạt tối đa
            if (stockQuantity > 0 && currentQty >= stockQuantity) {
                btnIncrease.disabled = true;
                btnIncrease.title = 'Đã đạt số lượng tối đa (' + stockQuantity + ' sản phẩm)';
                btnIncrease.style.opacity = '0.5';
                btnIncrease.style.cursor = 'not-allowed';
            } else {
                btnIncrease.disabled = false;
                btnIncrease.title = '';
                btnIncrease.style.opacity = '1';
                btnIncrease.style.cursor = 'pointer';
            }
        }
    }

    function updateQuantity(cartItemId, quantity, price) {
        // Cập nhật giá tạm thời (optimistic update)
        var itemTotal = quantity * price;
        document.getElementById('item-total-' + cartItemId).textContent = formatCurrency(itemTotal);

        // Gọi API để cập nhật trong database
        fetch('/Cart/UpdateCartItemQuantity', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: 'cartItemId=' + cartItemId + '&quantity=' + quantity
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Cập nhật giá từ server (đảm bảo chính xác)
                document.getElementById('item-total-' + cartItemId).textContent = formatCurrency(data.itemTotal);
                
                // Cập nhật tổng đơn hàng
                document.getElementById('subtotal-amount').textContent = formatCurrency(data.totalAmount);
                document.getElementById('total-amount').innerHTML = '<strong>' + formatCurrency(data.totalAmount) + '</strong>';
                
                // Cập nhật trạng thái nút +
                var input = document.getElementById('qty' + cartItemId);
                var stockQuantity = parseInt(input.getAttribute('data-stock')) || 0;
                updateIncreaseButtonState(cartItemId, quantity, stockQuantity);
            } else {
                // Nếu có lỗi, hiển thị thông báo và khôi phục giá trị cũ
                alert(data.message || 'Có lỗi xảy ra khi cập nhật số lượng');
                
                // Nếu có maxQuantity từ server, set lại giá trị
                if (data.maxQuantity) {
                    var input = document.getElementById('qty' + cartItemId);
                    input.value = data.maxQuantity;
                    updateQuantity(cartItemId, data.maxQuantity, price);
                } else {
                    window.location.reload();
                }
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Có lỗi xảy ra khi cập nhật số lượng');
            window.location.reload();
        });
    }

    function removeCartItem(cartItemId) {
        if (confirm('Bạn có chắc chắn muốn xóa sản phẩm này khỏi giỏ hàng?')) {
            fetch('/Cart/RemoveCartItem', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: 'cartItemId=' + cartItemId
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Cập nhật tổng đơn hàng
                    document.getElementById('subtotal-amount').textContent = formatCurrency(data.totalAmount);
                    document.getElementById('total-amount').innerHTML = '<strong>' + formatCurrency(data.totalAmount) + '</strong>';
                    
                    // Xóa phần tử khỏi DOM
                    var itemRow = document.getElementById('cart-item-row-' + cartItemId);
                    if (itemRow) {
                        // Xóa HR trước row (nếu có)
                        var hr = itemRow.previousElementSibling;
                        if (hr && hr.tagName === 'HR') {
                            hr.remove();
                        }
                        // Xóa HR sau row (nếu có)
                        hr = itemRow.nextElementSibling;
                        if (hr && hr.tagName === 'HR') {
                            hr.remove();
                        }
                        itemRow.remove();
                    }
                    
                    // Kiểm tra nếu giỏ hàng trống
                    var cartBody = document.querySelector('.card-body');
                    var items = cartBody.querySelectorAll('.row.align-items-center');
                    if (items.length === 0) {
                        window.location.reload();
                    }
                } else {
                    alert(data.message || 'Có lỗi xảy ra khi xóa sản phẩm');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi xóa sản phẩm');
                window.location.reload();
            });
        }
    }
</script>