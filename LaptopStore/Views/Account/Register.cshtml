@model LaptopStore.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LaptopStore</title>

    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #4f46e5 0%, #3b82f6 100%);
            --bg-overlay: rgba(15, 23, 42, 0.4);
            --glass-bg: rgba(255, 255, 255, 0.95);
            --glass-border: 1px solid rgba(255, 255, 255, 0.5);
            --shadow-lg: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: #0f172a url('https://images.unsplash.com/photo-1497294815431-9365093b7331?auto=format&fit=crop&w=1950&q=80') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        body::before {
            content: '';
            position: absolute;
            inset: 0;
            background: var(--bg-overlay);
            backdrop-filter: blur(8px);
        }

        .auth-wrapper {
            position: relative;
            z-index: 10;
            width: 100%;
            max-width: 1000px;
            height: 650px;
            display: flex;
            border-radius: 30px;
            overflow: hidden;
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: var(--glass-border);
            box-shadow: var(--shadow-lg);
            animation: slideUp 0.6s ease-out;
        }

        .auth-visual {
            width: 45%;
            background: var(--primary-gradient);
            color: #fff;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            position: relative;
        }

        .auth-visual::before,
        .auth-visual::after {
            content: '';
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.12);
        }

        .auth-visual::before {
            width: 300px;
            height: 300px;
            top: -60px;
            left: -60px;
        }

        .auth-visual::after {
            width: 200px;
            height: 200px;
            bottom: -40px;
            right: -40px;
        }

        .laptop-icon-large {
            font-size: 6rem;
            margin-bottom: 2rem;
            filter: drop-shadow(0 10px 15px rgba(0, 0, 0, 0.25));
            animation: float 6s ease-in-out infinite;
        }

        .auth-form-container {
            width: 55%;
            padding: 50px 60px;
            display: flex;
            flex-direction: column;
        }

        .auth-form-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .auth-form-header a {
            font-size: 0.9rem;
            color: #64748b;
        }

        .form-control-custom {
            width: 100%;
            height: 52px;
            padding: 12px 46px 12px 46px;
            border-radius: 16px;
            border: 2px solid #e2e8f0;
            background: #f8fafc;
            transition: all 0.25s ease;
            font-size: 0.95rem;
        }

        .form-control-custom:focus {
            outline: none;
            background: #fff;
            border-color: #3b82f6;
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.15);
        }

        .form-floating-custom {
            position: relative;
            margin-bottom: 18px;
        }

        .input-icon {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            pointer-events: none;
        }

        .password-toggle {
            position: absolute;
            right: 18px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #94a3b8;
            padding: 4px;
        }

        .password-toggle:hover {
            color: #64748b;
        }

        .validity-icon {
            position: absolute;
            right: 40px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1rem;
            display: none;
        }

        .validity-icon.valid {
            display: inline-block;
            color: #22c55e; /* xanh lá */
        }

        .validity-icon.invalid {
            display: inline-block;
            color: #ef4444; /* đỏ */
        }

        .is-invalid-custom {
            border-color: #ef4444 !important;
        }

        .btn-primary-custom {
            width: 100%;
            height: 52px;
            border-radius: 16px;
            border: none;
            background: var(--primary-gradient);
            color: #fff;
            font-weight: 700;
            font-size: 1rem;
            margin-top: 18px;
            box-shadow: 0 10px 20px rgba(37, 99, 235, 0.35);
            transition: transform 0.15s ease, box-shadow 0.15s ease, opacity 0.15s ease;
        }

        .btn-primary-custom:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 18px 30px rgba(37, 99, 235, 0.45);
        }

        .btn-primary-custom:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            box-shadow: none;
        }

        .validation-message {
            color: #ef4444;
            font-size: 0.8rem;
            margin: 4px 0 0 4px;
            display: block;
        }

        .validation-success {
            color: #10b981;
            font-size: 0.8rem;
            margin: 4px 0 0 4px;
            display: block;
        }

        .password-rules {
            list-style: none;
            padding-left: 0;
            margin: 6px 0 0 4px;
            font-size: 0.8rem;
            display: none;
        }

        .password-rules li {
            display: flex;
            align-items: center;
            color: #94a3b8;
            margin-bottom: 2px;
        }

        .password-rules li i {
            margin-right: 6px;
        }

        .password-rules li.valid {
            color: #16a34a;
        }

        .password-rules li.valid i {
            content: '\f00c';
        }

        .password-rules li.invalid {
            color: #ef4444;
        }

        @@keyframes float {
            0%   { transform: translateY(0); }
            50%  { transform: translateY(-15px); }
            100% { transform: translateY(0); }
        }

        @@keyframes slideUp {
            from { opacity: 0; transform: translateY(40px); }
            to   { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body>
    <div class="auth-wrapper">
        <div class="auth-visual">
            <i class="fas fa-desktop laptop-icon-large"></i>
            <h2>LaptopStore</h2>
            <p>Trải nghiệm công nghệ đỉnh cao</p>
        </div>

        <div class="auth-form-container">
            <div class="auth-form-header">
                <h3 class="mb-0">Đăng ký</h3>
                <a asp-controller="Account" asp-action="Login">Đã có tài khoản? Đăng nhập</a>
            </div>

            <form asp-action="Register" method="post">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">@Html.ValidationSummary(false)</div>
                }

                <!-- Họ tên -->
                <div class="form-floating-custom">
                    <input asp-for="FullName"
                           class="form-control-custom"
                           placeholder="Họ và tên"
                           required />
                    <i class="fas fa-user input-icon"></i>
                    <span asp-validation-for="FullName" class="validation-message"></span>
                </div>

                <!-- Email -->
                <div class="form-floating-custom">
                    <input asp-for="Email"
                           id="regEmail"
                           class="form-control-custom"
                           placeholder="Email"
                           required
                           oninput="checkEmail()" />
                    <i class="fas fa-envelope input-icon"></i>
                    <i id="emailIcon" class="fas fa-circle-check validity-icon"></i>
                    <span id="email-error" class="validation-message" style="display:none;"></span>
                    <span asp-validation-for="Email" class="validation-message"></span>
                </div>

                <!-- Phone -->
                <div class="form-floating-custom">
                    <input asp-for="PhoneNumber"
                           id="regPhone"
                           class="form-control-custom"
                           placeholder="Số điện thoại"
                           required
                           oninput="checkPhone()" />
                    <i class="fas fa-phone input-icon"></i>
                    <i id="phoneIcon" class="fas fa-circle-check validity-icon"></i>
                    <span id="phone-error" class="validation-message" style="display:none;"></span>
                    <span asp-validation-for="PhoneNumber" class="validation-message"></span>
                </div>

                <!-- Address -->
                <div class="form-floating-custom">
                    <input asp-for="Address"
                           id="regAddress"
                           class="form-control-custom"
                           placeholder="Địa chỉ"
                           required
                           maxlength="255"
                           oninput="checkAddress()" />
                    <i class="fas fa-map-marker-alt input-icon"></i>
                    <i id="addressIcon" class="fas fa-circle-check validity-icon"></i>
                    <span id="address-error" class="validation-message" style="display:none;"></span>
                    <span asp-validation-for="Address" class="validation-message"></span>
                </div>

                <!-- Password -->
                <div class="form-floating-custom">
                    <input asp-for="Password"
                           type="password"
                           id="regPass"
                           class="form-control-custom"
                           placeholder="Mật khẩu"
                           required
                           oninput="validatePassword()" />
                    <i class="fas fa-lock input-icon"></i>
                    <i class="fas fa-eye password-toggle" onclick="togglePass('regPass', this)"></i>
                    <i id="passwordIcon" class="fas fa-circle-check validity-icon"></i>
                    <span asp-validation-for="Password" class="validation-message"></span>
                </div>

                <!-- Password rules -->
                <ul class="password-rules" id="passwordRules">
                    <li id="rule-length" class="invalid">
                        <i class="fas fa-circle"></i> Tối thiểu 8 ký tự
                    </li>
                    <li id="rule-upper" class="invalid">
                        <i class="fas fa-circle"></i> Ít nhất 1 chữ hoa (A–Z)
                    </li>
                    <li id="rule-lower" class="invalid">
                        <i class="fas fa-circle"></i> Ít nhất 1 chữ thường (a–z)
                    </li>
                    <li id="rule-number" class="invalid">
                        <i class="fas fa-circle"></i> Ít nhất 1 chữ số (0–9)
                    </li>
                    <li id="rule-special" class="invalid">
                        <i class="fas fa-circle"></i> Ít nhất 1 ký tự đặc biệt (!@@#$%^&*)
                    </li>
                </ul>

                <!-- Confirm password -->
                <div class="form-floating-custom" style="margin-top:10px;">
                    <input asp-for="ConfirmPassword"
                           type="password"
                           id="regConfirm"
                           class="form-control-custom"
                           placeholder="Nhập lại mật khẩu"
                           required
                           oninput="validateConfirmPassword()" />
                    <i class="fas fa-check-circle input-icon"></i>
                    <i class="fas fa-eye password-toggle" onclick="togglePass('regConfirm', this)"></i>
                    <i id="confirmIcon" class="fas fa-circle-check validity-icon"></i>
                    <span id="confirm-error" class="validation-message" style="display:none;"></span>
                    <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
                </div>

                <button type="submit" class="btn-primary-custom" id="btnRegister" disabled>Đăng Ký</button>
            </form>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        let emailValid = false;
        let phoneValid = false;
        let addressValid = false;
        let passwordValid = false;
        let confirmValid = false;

        function togglePass(inputId, icon) {
            const input = document.getElementById(inputId);
            const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
            input.setAttribute('type', type);
            icon.classList.toggle('fa-eye');
            icon.classList.toggle('fa-eye-slash');
        }

        function updateSubmitState() {
            const btn = document.getElementById('btnRegister');
            btn.disabled = !(emailValid && phoneValid && addressValid && passwordValid && confirmValid);
        }

        // EMAIL
        async function checkEmail() {
            const emailInput = document.getElementById('regEmail');
            const errorSpan = document.getElementById('email-error');
            const icon = document.getElementById('emailIcon');

            const email = emailInput.value.trim();
            if (!email) {
                emailValid = false;
                icon.className = 'fas fa-circle-check validity-icon';
                icon.style.display = 'none';
                errorSpan.style.display = 'none';
                emailInput.classList.remove('is-invalid-custom');
                updateSubmitState();
                return;
            }

            const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;

            if (!emailRegex.test(email)) {
                emailValid = false;
                errorSpan.textContent = 'Email không hợp lệ.';
                errorSpan.style.display = 'block';
                emailInput.classList.add('is-invalid-custom');
                icon.style.display = 'inline-block';
                icon.className = 'fas fa-circle-exclamation validity-icon invalid';
                updateSubmitState();
                return;
            }

            try {
                const response = await fetch(`/Account/CheckEmail?email=${encodeURIComponent(email)}`);
                const data = await response.json();

                if (data.exists) {
                    emailValid = false;
                    errorSpan.textContent = 'Email này đã được sử dụng.';
                    errorSpan.style.display = 'block';
                    emailInput.classList.add('is-invalid-custom');
                    icon.style.display = 'inline-block';
                    icon.className = 'fas fa-circle-exclamation validity-icon invalid';
                } else {
                    emailValid = true;
                    errorSpan.style.display = 'none';
                    emailInput.classList.remove('is-invalid-custom');
                    icon.style.display = 'inline-block';
                    icon.className = 'fas fa-circle-check validity-icon valid';
                }
            } catch (err) {
                console.error(err);
                emailValid = false;
                icon.style.display = 'none';
            }

            updateSubmitState();
        }

        // PHONE
        async function checkPhone() {
            const phoneInput = document.getElementById('regPhone');
            const errorSpan = document.getElementById('phone-error');
            const icon = document.getElementById('phoneIcon');

            const phone = phoneInput.value.trim();
            if (!phone) {
                phoneValid = false;
                icon.className = 'fas fa-circle-check validity-icon';
                icon.style.display = 'none';
                errorSpan.style.display = 'none';
                phoneInput.classList.remove('is-invalid-custom');
                updateSubmitState();
                return;
            }

            const phoneRegex = /^[0-9]{9,11}$/;

            if (!phoneRegex.test(phone)) {
                phoneValid = false;
                errorSpan.textContent = 'Số điện thoại không hợp lệ (9–11 chữ số).';
                errorSpan.style.display = 'block';
                phoneInput.classList.add('is-invalid-custom');
                icon.style.display = 'inline-block';
                icon.className = 'fas fa-circle-exclamation validity-icon invalid';
                updateSubmitState();
                return;
            }

            try {
                const response = await fetch(`/Account/CheckPhone?phoneNumber=${encodeURIComponent(phone)}`);
                const data = await response.json();

                if (data.exists) {
                    phoneValid = false;
                    errorSpan.textContent = 'Số điện thoại này đã được sử dụng.';
                    errorSpan.style.display = 'block';
                    phoneInput.classList.add('is-invalid-custom');
                    icon.style.display = 'inline-block';
                    icon.className = 'fas fa-circle-exclamation validity-icon invalid';
                } else {
                    phoneValid = true;
                    errorSpan.style.display = 'none';
                    phoneInput.classList.remove('is-invalid-custom');
                    icon.style.display = 'inline-block';
                    icon.className = 'fas fa-circle-check validity-icon valid';
                }
            } catch (err) {
                console.error(err);
                phoneValid = false;
                icon.style.display = 'none';
            }

            updateSubmitState();
        }

        // ADDRESS
        function checkAddress() {
            const addressInput = document.getElementById('regAddress');
            const errorSpan = document.getElementById('address-error');
            const icon = document.getElementById('addressIcon');

            const address = addressInput.value.trim();
            
            if (!address) {
                addressValid = false;
                icon.className = 'fas fa-circle-check validity-icon';
                icon.style.display = 'none';
                errorSpan.style.display = 'none';
                addressInput.classList.remove('is-invalid-custom');
                updateSubmitState();
                return;
            }

            if (address.length > 255) {
                addressValid = false;
                errorSpan.textContent = 'Địa chỉ không được quá 255 ký tự';
                errorSpan.style.display = 'block';
                addressInput.classList.add('is-invalid-custom');
                icon.style.display = 'inline-block';
                icon.className = 'fas fa-circle-exclamation validity-icon invalid';
            } else {
                addressValid = true;
                errorSpan.style.display = 'none';
                addressInput.classList.remove('is-invalid-custom');
                icon.style.display = 'inline-block';
                icon.className = 'fas fa-circle-check validity-icon valid';
            }

            updateSubmitState();
        }

        // PASSWORD RULES
        function validatePassword() {
            const passInput = document.getElementById('regPass');
            const password = passInput.value;

            const ruleLength = document.getElementById('rule-length');
            const ruleUpper = document.getElementById('rule-upper');
            const ruleLower = document.getElementById('rule-lower');
            const ruleNumber = document.getElementById('rule-number');
            const ruleSpecial = document.getElementById('rule-special');
            const icon = document.getElementById('passwordIcon');
            const rulesBox = document.getElementById('passwordRules');

            const hasLength = password.length >= 8;
            const hasUpper = /[A-Z]/.test(password);
            const hasLower = /[a-z]/.test(password);
            const hasNumber = /[0-9]/.test(password);
            const hasSpecial = /[^A-Za-z0-9]/.test(password);

            setRuleState(ruleLength, hasLength);
            setRuleState(ruleUpper, hasUpper);
            setRuleState(ruleLower, hasLower);
            setRuleState(ruleNumber, hasNumber);
            setRuleState(ruleSpecial, hasSpecial);

            passwordValid = hasLength && hasUpper && hasLower && hasNumber && hasSpecial;

            if (!password) {
                rulesBox.style.display = 'none';
                icon.style.display = 'none';
                passInput.classList.remove('is-invalid-custom');
                passwordValid = false;
            } else {
                if (passwordValid) {
                    rulesBox.style.display = 'none';
                    icon.style.display = 'inline-block';
                    icon.className = 'fas fa-circle-check validity-icon valid';
                    passInput.classList.remove('is-invalid-custom');
                } else {
                    rulesBox.style.display = 'block';
                    icon.style.display = 'inline-block';
                    icon.className = 'fas fa-circle-exclamation validity-icon invalid';
                    passInput.classList.add('is-invalid-custom');
                }
            }

            validateConfirmPassword();
            updateSubmitState();
        }

        function setRuleState(element, isValid) {
            element.classList.remove('valid', 'invalid');
            element.classList.add(isValid ? 'valid' : 'invalid');
            const icon = element.querySelector('i');
            icon.className = isValid ? 'fas fa-check-circle' : 'fas fa-circle';
        }

        // CONFIRM PASSWORD
        function validateConfirmPassword() {
            const passInput = document.getElementById('regPass');
            const confirmInput = document.getElementById('regConfirm');
            const icon = document.getElementById('confirmIcon');
            const errorSpan = document.getElementById('confirm-error');

            const password = passInput.value;
            const confirm = confirmInput.value;

            if (!confirm) {
                confirmValid = false;
                icon.style.display = 'none';
                errorSpan.style.display = 'none';
                confirmInput.classList.remove('is-invalid-custom');
                updateSubmitState();
                return;
            }

            if (password !== confirm) {
                confirmValid = false;
                errorSpan.textContent = 'Mật khẩu xác nhận không khớp.';
                errorSpan.style.display = 'block';
                confirmInput.classList.add('is-invalid-custom');
                icon.style.display = 'inline-block';
                icon.className = 'fas fa-circle-exclamation validity-icon invalid';
            } else {
                confirmValid = true;
                errorSpan.style.display = 'none';
                confirmInput.classList.remove('is-invalid-custom');
                icon.style.display = 'inline-block';
                icon.className = 'fas fa-circle-check validity-icon valid';
            }

            updateSubmitState();
        }

        document.addEventListener('DOMContentLoaded', function () {
            updateSubmitState();
        });
    </script>
</body>
</html>
