@model LaptopStore.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LaptopStore</title>

    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #4f46e5 0%, #3b82f6 100%);
            --bg-overlay: rgba(15, 23, 42, 0.4);
            --glass-bg: rgba(255, 255, 255, 0.95);
            --glass-border: 1px solid rgba(255, 255, 255, 0.5);
            --shadow-lg: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: #0f172a url('https://images.unsplash.com/photo-1497294815431-9365093b7331?auto=format&fit=crop&w=1950&q=80') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        body::before {
            content: '';
            position: absolute;
            inset: 0;
            background: var(--bg-overlay);
            backdrop-filter: blur(8px);
        }

        .auth-wrapper {
            position: relative;
            z-index: 10;
            width: 100%;
            max-width: 500px;
            display: flex;
            flex-direction: column;
            border-radius: 24px;
            overflow: hidden;
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: var(--glass-border);
            box-shadow: var(--shadow-lg);
            animation: slideUp 0.6s ease-out;
            padding: 40px;
        }

        .form-control-custom {
            width: 100%;
            height: 52px;
            padding: 12px 46px 12px 46px;
            border-radius: 16px;
            border: 2px solid #e2e8f0;
            background: #f8fafc;
            transition: all 0.25s ease;
            font-size: 0.95rem;
        }

        .form-control-custom:focus {
            outline: none;
            background: #fff;
            border-color: #3b82f6;
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.15);
        }

        .form-floating-custom {
            position: relative;
            margin-bottom: 18px;
        }

        .input-icon {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            pointer-events: none;
        }

        .password-toggle {
            position: absolute;
            right: 18px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #94a3b8;
            padding: 4px;
        }

        .password-toggle:hover {
            color: #64748b;
        }

        .is-invalid-custom {
            border-color: #ef4444 !important;
            background: #fef2f2 !important;
            box-shadow: 0 0 0 4px rgba(239, 68, 68, 0.1) !important;
        }

        .is-valid-custom {
            border-color: #22c55e !important;
            background: #f0fdf4 !important;
            box-shadow: 0 0 0 4px rgba(34, 197, 94, 0.1) !important;
        }

        .btn-primary-custom {
            width: 100%;
            height: 52px;
            border-radius: 16px;
            border: none;
            background: var(--primary-gradient);
            color: #fff;
            font-weight: 700;
            font-size: 1rem;
            margin-top: 18px;
            box-shadow: 0 10px 20px rgba(37, 99, 235, 0.35);
            transition: transform 0.15s ease, box-shadow 0.15s ease, opacity 0.15s ease;
        }

        .btn-primary-custom:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 18px 30px rgba(37, 99, 235, 0.45);
        }

        .btn-primary-custom:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            box-shadow: none;
        }

        .validation-message {
            color: #ef4444;
            font-size: 0.8rem;
            margin: 4px 0 0 4px;
            display: block;
        }

        .password-rules {
            list-style: none;
            padding-left: 0;
            margin: 6px 0 0 4px;
            font-size: 0.8rem;
            display: none;
        }

        .password-rules li {
            display: flex;
            align-items: center;
            color: #94a3b8;
            margin-bottom: 2px;
        }

        .password-rules li i {
            margin-right: 6px;
        }

        .password-rules li.valid {
            color: #16a34a;
        }

        .password-rules li.valid i {
            content: '\f00c';
        }

        .password-rules li.invalid {
            color: #ef4444;
        }

        @@keyframes slideUp {
            from { opacity: 0; transform: translateY(40px); }
            to   { opacity: 1; transform: translateY(0); }
        }

        .header-icon {
            width: 60px;
            height: 60px;
            background: var(--primary-gradient);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 24px;
            margin: 0 auto 20px;
            box-shadow: 0 10px 25px rgba(59, 130, 246, 0.3);
        }
    </style>
</head>
<body>
    <div class="auth-wrapper">
        <div class="text-center mb-4">
            <div class="header-icon">
                <i class="fas fa-lock-open"></i>
            </div>
            <h3 class="fw-bold mb-1">Mật khẩu mới</h3>
            <p class="text-muted small">Nhập mật khẩu mới cho tài khoản <br><strong>@Model.Email</strong></p>
        </div>

        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger py-2" style="font-size: 0.9rem;">
                    <i class="fas fa-exclamation-circle me-2"></i>Link đã hết hạn hoặc không hợp lệ.
                </div>
            }

            <!-- Password -->
            <div class="form-floating-custom">
                <input asp-for="NewPassword"
                       type="password"
                       id="resetPass"
                       class="form-control-custom"
                       placeholder="Mật khẩu mới"
                       required
                       oninput="validatePassword()" />
                <i class="fas fa-lock input-icon"></i>
                <i class="fas fa-eye password-toggle" onclick="togglePass('resetPass', this)"></i>
                <span asp-validation-for="NewPassword" class="validation-message"></span>
            </div>

            <!-- Password Rules Checklist -->
            <ul class="password-rules" id="passwordRules">
                <li id="rule-length" class="invalid"><i class="fas fa-circle"></i> Tối thiểu 8 ký tự</li>
                <li id="rule-upper" class="invalid"><i class="fas fa-circle"></i> 1 chữ hoa (A-Z)</li>
                <li id="rule-lower" class="invalid"><i class="fas fa-circle"></i> 1 chữ thường (a-z)</li>
                <li id="rule-number" class="invalid"><i class="fas fa-circle"></i> 1 chữ số (0-9)</li>
                <li id="rule-special" class="invalid"><i class="fas fa-circle"></i> 1 ký tự đặc biệt</li>
            </ul>

            <!-- Confirm Password -->
            <div class="form-floating-custom mt-3">
                <input asp-for="ConfirmPassword"
                       type="password"
                       id="resetConfirm"
                       class="form-control-custom"
                       placeholder="Nhập lại mật khẩu"
                       required
                       oninput="validateConfirmPassword()" />
                <i class="fas fa-shield-alt input-icon"></i>
                <i class="fas fa-eye password-toggle" onclick="togglePass('resetConfirm', this)"></i>
                <span id="confirm-error" class="validation-message" style="display:none;"></span>
                <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
            </div>

            <button type="submit" class="btn-primary-custom" id="btnSubmit" disabled>
                <span class="btn-text">Đặt lại mật khẩu</span>
                <span class="btn-loading" style="display: none;">
                    <i class="fas fa-spinner fa-spin me-2"></i>Đang xử lý...
                </span>
            </button>
        </form>
        
        <div class="mt-4 text-center">
             <a href="@Url.Action("Login")" class="text-decoration-none text-muted small">
                <i class="fas fa-arrow-left me-1"></i>Huỷ bỏ
            </a>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let passwordValid = false;
        let confirmValid = false;

        function togglePass(inputId, icon) {
            const input = document.getElementById(inputId);
            const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
            input.setAttribute('type', type);
            // Toggle icon classes
            if (type === 'text') {
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        function validatePassword() {
            const passInput = document.getElementById('resetPass');
            const password = passInput.value;
            const rulesBox = document.getElementById('passwordRules');

            const ruleLength = document.getElementById('rule-length');
            const ruleUpper = document.getElementById('rule-upper');
            const ruleLower = document.getElementById('rule-lower');
            const ruleNumber = document.getElementById('rule-number');
            const ruleSpecial = document.getElementById('rule-special');

            const hasLength = password.length >= 8;
            const hasUpper = /[A-Z]/.test(password);
            const hasLower = /[a-z]/.test(password);
            const hasNumber = /[0-9]/.test(password);
            const hasSpecial = /[^A-Za-z0-9]/.test(password);

            setRuleState(ruleLength, hasLength);
            setRuleState(ruleUpper, hasUpper);
            setRuleState(ruleLower, hasLower);
            setRuleState(ruleNumber, hasNumber);
            setRuleState(ruleSpecial, hasSpecial);

            passwordValid = hasLength && hasUpper && hasLower && hasNumber && hasSpecial;

            if (!password) {
                rulesBox.style.display = 'none';
                passInput.classList.remove('is-invalid-custom', 'is-valid-custom');
                passwordValid = false;
            } else {
                 // Show rules when typing
                 rulesBox.style.display = 'block';
                 
                if (passwordValid) {
                    passInput.classList.remove('is-invalid-custom');
                    passInput.classList.add('is-valid-custom');
                } else {
                    passInput.classList.remove('is-valid-custom');
                    passInput.classList.add('is-invalid-custom');
                }
            }

            validateConfirmPassword(); // Re-validate confirm field if password changes
            updateSubmitState();
        }

         function setRuleState(element, isValid) {
            element.classList.remove('valid', 'invalid');
            element.classList.add(isValid ? 'valid' : 'invalid');
            const icon = element.querySelector('i');
            icon.className = isValid ? 'fas fa-check-circle' : 'fas fa-circle';
        }

        function validateConfirmPassword() {
            const passInput = document.getElementById('resetPass');
            const confirmInput = document.getElementById('resetConfirm');
            const errorSpan = document.getElementById('confirm-error');

            const password = passInput.value;
            const confirm = confirmInput.value;

            if (!confirm) {
                confirmValid = false;
                errorSpan.style.display = 'none';
                confirmInput.classList.remove('is-invalid-custom', 'is-valid-custom');
                updateSubmitState();
                return;
            }

            if (password !== confirm) {
                confirmValid = false;
                errorSpan.textContent = 'Mật khẩu xác nhận không khớp.';
                errorSpan.style.display = 'block';
                confirmInput.classList.remove('is-valid-custom');
                confirmInput.classList.add('is-invalid-custom');
            } else {
                confirmValid = true;
                errorSpan.style.display = 'none';
                confirmInput.classList.remove('is-invalid-custom');
                confirmInput.classList.add('is-valid-custom');
            }
            updateSubmitState();
        }

        function updateSubmitState() {
            const btn = document.getElementById('btnSubmit');
            btn.disabled = !(passwordValid && confirmValid);
        }

        document.querySelector('form').addEventListener('submit', function(e) {
             const btn = document.getElementById('btnSubmit');
             const btnText = btn.querySelector('.btn-text');
             const btnLoading = btn.querySelector('.btn-loading');
             
            if (!btn.disabled) {
                btn.disabled = true;
                btnText.style.display = 'none';
                btnLoading.style.display = 'inline';
            }
        });
    </script>
</body>
</html>
