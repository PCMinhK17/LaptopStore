@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = null; 
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LaptopStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            background-color: #e3f2fd;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }
        .card-custom {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            overflow: hidden;
            width: 100%;
            max-width: 450px;
            padding: 2rem;
            border-top: 5px solid #2196f3;
        }
        .btn-primary {
            background-color: #2196f3;
            border-color: #2196f3;
        }
        .text-primary-custom {
            color: #1976d2;
        }
    </style>
</head>
<body>
    <div class="card-custom">
        <div class="text-center mb-4">
            <h2 class="text-primary-custom fw-bold">Quên Mật Khẩu</h2>
            <p class="text-muted">Nhập email của bạn để lấy lại mật khẩu</p>
        </div>
        <form>
            <div class="mb-3">
                <label class="form-label fw-bold text-secondary">Email</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-envelope"></i></span>
                    <input type="email" class="form-control border-start-0 ps-0" placeholder="user@example.com" />
                </div>
            </div>
            <div class="d-grid gap-2">
                <button type="button" class="btn btn-primary btn-lg fw-bold">GỬI YÊU CẦU</button>
                <a href="/Account/Login" class="btn btn-outline-secondary">Quay lại Đăng nhập</a>
            </div>
        </form>
    </div>
</body>
</html>
