@{
    ViewData["Title"] = "Xác thực Email";
    Layout = null;
    var email = ViewBag.Email as string ?? "email của bạn";
    var userId = ViewBag.UserId;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LaptopStore</title>

    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #4f46e5 0%, #3b82f6 100%);
            --bg-overlay: rgba(15, 23, 42, 0.4);
            --glass-bg: rgba(255, 255, 255, 0.95);
            --glass-border: 1px solid rgba(255, 255, 255, 0.5);
            --shadow-lg: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: #0f172a url('https://images.unsplash.com/photo-1497294815431-9365093b7331?auto=format&fit=crop&w=1950&q=80') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        body::before {
            content: '';
            position: absolute;
            inset: 0;
            background: var(--bg-overlay);
            backdrop-filter: blur(8px);
        }

        .verification-card {
            position: relative;
            z-index: 10;
            width: 100%;
            max-width: 550px;
            padding: 50px;
            border-radius: 30px;
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: var(--glass-border);
            box-shadow: var(--shadow-lg);
            text-align: center;
            animation: slideUp 0.6s ease-out;
        }

        .email-icon {
            width: 120px;
            height: 120px;
            margin: 0 auto 30px;
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            animation: pulse 2s ease-in-out infinite;
        }

        .email-icon i {
            font-size: 50px;
            color: #fff;
        }

        h1 {
            font-size: 1.8rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 15px;
        }

        .description {
            color: #64748b;
            font-size: 1rem;
            line-height: 1.7;
            margin-bottom: 30px;
        }

        .email-highlight {
            color: #3b82f6;
            font-weight: 600;
        }

        .info-box {
            background: linear-gradient(135deg, #eff6ff 0%, #f0f9ff 100%);
            border: 1px solid #bfdbfe;
            border-radius: 16px;
            padding: 20px;
            margin-bottom: 30px;
        }

        .info-box p {
            margin: 0;
            color: #1e40af;
            font-size: 0.9rem;
        }

        .info-box i {
            color: #3b82f6;
            margin-right: 8px;
        }

        .btn-primary-custom {
            display: inline-block;
            padding: 14px 32px;
            border-radius: 16px;
            border: none;
            background: var(--primary-gradient);
            color: #fff;
            font-weight: 600;
            font-size: 1rem;
            text-decoration: none;
            box-shadow: 0 10px 20px rgba(37, 99, 235, 0.35);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            cursor: pointer;
        }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 18px 30px rgba(37, 99, 235, 0.45);
            color: #fff;
        }

        .btn-outline-custom {
            display: inline-block;
            padding: 14px 32px;
            border-radius: 16px;
            border: 2px solid #e2e8f0;
            background: transparent;
            color: #64748b;
            font-weight: 600;
            font-size: 1rem;
            text-decoration: none;
            transition: all 0.2s ease;
            cursor: pointer;
        }

        .btn-outline-custom:hover {
            border-color: #3b82f6;
            color: #3b82f6;
            background: rgba(59, 130, 246, 0.05);
        }

        .action-buttons {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .resend-section {
            margin-top: 30px;
            padding-top: 25px;
            border-top: 1px solid #e2e8f0;
        }

        .resend-text {
            color: #94a3b8;
            font-size: 0.9rem;
            margin-bottom: 15px;
        }

        .steps-container {
            text-align: left;
            margin-bottom: 30px;
        }

        .step-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 15px;
        }

        .step-number {
            width: 28px;
            height: 28px;
            min-width: 28px;
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-size: 0.85rem;
            font-weight: 600;
            margin-right: 12px;
        }

        .step-text {
            color: #475569;
            font-size: 0.95rem;
            line-height: 1.5;
        }

        @@keyframes slideUp {
            from { opacity: 0; transform: translateY(40px); }
            to   { opacity: 1; transform: translateY(0); }
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .toast-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1050;
        }
    </style>
</head>
<body>
    @if (TempData["ToastMessage"] != null)
    {
        <div class="toast-container">
            <div class="alert alert-@(TempData["ToastType"]?.ToString() == "success" ? "success" : TempData["ToastType"]?.ToString() == "warning" ? "warning" : "info") alert-dismissible fade show" role="alert">
                <i class="fas fa-@(TempData["ToastType"]?.ToString() == "success" ? "check-circle" : TempData["ToastType"]?.ToString() == "warning" ? "exclamation-triangle" : "info-circle") me-2"></i>
                @TempData["ToastMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    <div class="verification-card">
        <div class="email-icon">
            <i class="fas fa-envelope-open-text"></i>
        </div>

        <h1>Kiểm tra Email của bạn</h1>
        
        <p class="description">
            Chúng tôi đã gửi một email xác thực đến<br>
            <span class="email-highlight">@email</span>
        </p>

        <div class="steps-container">
            <div class="step-item">
                <span class="step-number">1</span>
                <span class="step-text">Mở hộp thư email của bạn (kiểm tra cả thư mục Spam)</span>
            </div>
            <div class="step-item">
                <span class="step-number">2</span>
                <span class="step-text">Tìm email từ <strong>LaptopStore</strong> với tiêu đề "Xác thực tài khoản"</span>
            </div>
            <div class="step-item">
                <span class="step-number">3</span>
                <span class="step-text">Click vào nút <strong>"Xác thực Email"</strong> trong email</span>
            </div>
        </div>

        <div class="info-box">
            <p>
                <i class="fas fa-clock"></i>
                Email có thể mất vài phút để đến. Link xác thực sẽ hết hạn sau <strong>24 giờ</strong>.
            </p>
        </div>

        <div class="action-buttons">
            <a href="https://mail.google.com" target="_blank" class="btn-primary-custom">
                <i class="fab fa-google me-2"></i>Mở Gmail
            </a>
            <a asp-controller="Account" asp-action="Login" class="btn-outline-custom">
                <i class="fas fa-arrow-left me-2"></i>Về trang đăng nhập
            </a>
        </div>

        <div class="resend-section">
            <p class="resend-text">Không nhận được email?</p>
            @if (userId != null)
            {
                <form asp-controller="Account" asp-action="ResendVerificationEmail" method="post" style="display: inline;">
                    <input type="hidden" name="userId" value="@userId" />
                    <button type="submit" class="btn-outline-custom">
                        <i class="fas fa-redo me-2"></i>Gửi lại email xác thực
                    </button>
                </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Register" class="btn-outline-custom">
                    <i class="fas fa-user-plus me-2"></i>Đăng ký lại
                </a>
            }
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-hide toast after 5 seconds
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
</body>
</html>
