@model LaptopStore.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null; // Giữ layout full-screen cho trang auth
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LaptopStore</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #4f46e5 0%, #3b82f6 100%);
            --bg-base: #f8fafc;
            --glass-bg: rgba(255, 255, 255, 0.95);
            --glass-border: 1px solid rgba(255, 255, 255, 0.5);
            --shadow-lg: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }

        body {
            font-family: 'Plus Jakarta Sans', system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
            background: #0f172a url('https://images.unsplash.com/photo-1497294815431-9365093b7331?auto=format&fit=crop&w=1920&q=80') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        body::before {
            content: '';
            position: fixed;
            inset: 0;
            background: rgba(15, 23, 42, 0.45);
            backdrop-filter: blur(10px);
        }

        .auth-wrapper {
            position: relative;
            z-index: 10;
            width: 100%;
            max-width: 1000px;
            height: 620px;
            display: flex;
            border-radius: 30px;
            background: var(--glass-bg);
            border: var(--glass-border);
            box-shadow: var(--shadow-lg);
            overflow: hidden;
            animation: slideUp 0.6s ease-out;
        }

        .auth-visual {
            width: 45%;
            background: var(--primary-gradient);
            color: #e5f2ff;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 40px 32px;
            position: relative;
            overflow: hidden;
        }

        .auth-visual::before,
        .auth-visual::after {
            content: '';
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.12);
            filter: blur(1px);
        }

        .auth-visual::before {
            width: 260px;
            height: 260px;
            top: -40px;
            left: -40px;
        }

        .auth-visual::after {
            width: 200px;
            height: 200px;
            bottom: -40px;
            right: -40px;
        }

        .laptop-icon-large {
            font-size: 5rem;
            margin-bottom: 1.5rem;
            filter: drop-shadow(0 15px 30px rgba(0, 0, 0, 0.25));
            animation: float 6s ease-in-out infinite;
        }

        .auth-visual h2 {
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .auth-visual p {
            opacity: 0.9;
            font-size: 0.95rem;
        }

        .auth-form-container {
            width: 55%;
            padding: 48px 56px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .auth-title {
            font-size: 1.6rem;
            font-weight: 700;
            margin-bottom: 4px;
            color: #0f172a;
        }

        .auth-subtitle {
            font-size: 0.9rem;
            color: #64748b;
            margin-bottom: 24px;
        }

        .form-floating-custom {
            position: relative;
            margin-bottom: 22px;
        }

        .form-control-custom {
            width: 100%;
            height: 52px;
            padding: 12px 16px 12px 52px;
            border: 2px solid #e2e8f0;
            border-radius: 16px;
            background: #f8fafc;
            font-size: 0.95rem;
            transition: all 0.2s ease;
        }

        .form-control-custom:focus {
            background: #ffffff;
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.18);
            outline: none;
        }

        .input-icon {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            pointer-events: none;
        }

        .password-toggle {
            position: absolute;
            right: 16px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #94a3b8;
            padding: 4px;
        }

        .password-toggle:hover {
            color: #64748b;
        }

        .btn-primary-custom {
            width: 100%;
            height: 50px;
            border-radius: 16px;
            border: none;
            background: radial-gradient(circle at 10% 0%, #4f46e5 0%, #3b82f6 35%, #2563eb 100%);
            color: #fff;
            font-weight: 600;
            font-size: 1rem;
            margin-top: 8px;
            box-shadow: 0 14px 30px rgba(37, 99, 235, 0.45);
            transition: transform 0.15s ease, box-shadow 0.15s ease;
        }

        .btn-primary-custom:hover {
            transform: translateY(-1px);
            box-shadow: 0 18px 40px rgba(37, 99, 235, 0.55);
        }

        .btn-primary-custom:active {
            transform: translateY(0);
            box-shadow: 0 10px 25px rgba(37, 99, 235, 0.4);
        }

        .validation-message {
            color: #ef4444;
            font-size: 0.78rem;
            margin-top: 4px;
            display: block;
        }

        .validation-success {
            color: #16a34a;
            font-size: 0.78rem;
            margin-top: 4px;
            display: block;
        }

        .divider {
            display: flex;
            align-items: center;
            margin: 22px 0 16px;
            color: #94a3b8;
            font-size: 0.8rem;
        }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #e2e8f0;
        }

        .divider span {
            padding: 0 10px;
        }

        .link-small {
            font-size: 0.85rem;
            color: #3b82f6;
            text-decoration: none;
        }

        .link-small:hover {
            text-decoration: underline;
        }

        .auth-alert {
            display: flex;
            align-items: flex-start;
            gap: 12px;
            padding: 12px 14px;
            border-radius: 16px;
            margin-bottom: 20px;
            background: #fef2f2;
            border: 1px solid #fecaca;
            color: #b91c1c;
        }

        .auth-alert-error .alert-icon {
            font-size: 18px;
            margin-top: 2px;
        }

        .auth-alert h6 {
            font-size: 0.9rem;
            font-weight: 600;
            margin: 0 0 4px 0;
        }

        .auth-alert ul {
            padding-left: 18px;
            margin: 0;
            font-size: 0.85rem;
        }

        @@keyframes float {
            0% { transform: translateY(0); }
            50% { transform: translateY(-12px); }
            100% { transform: translateY(0); }
        }

        @@keyframes slideUp {
            from { opacity: 0; transform: translateY(40px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body>
    <div class="auth-wrapper">
        <div class="auth-visual">
            <i class="fas fa-desktop laptop-icon-large"></i>
            <h2>LaptopStore</h2>
            <p>Trải nghiệm công nghệ đỉnh cao</p>
        </div>

        <div class="auth-form-container">
            <h1 class="auth-title">Đăng nhập</h1>
            <p class="auth-subtitle">Chào mừng bạn quay lại. Đăng nhập để tiếp tục mua sắm.</p>

            <form asp-action="Login" method="post">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="auth-alert auth-alert-error">
                        <i class="fas fa-circle-exclamation alert-icon"></i>
                        <div class="alert-content">
                            <h6>Không thể đăng nhập</h6>
                            @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                        </div>
                    </div>
                }

                <div class="form-floating-custom">
                    <input asp-for="Input"
                           id="loginInput"
                           class="form-control-custom"
                           placeholder="Email hoặc Số điện thoại"
                           required />
                    <i class="fas fa-user input-icon"></i>
                    <span asp-validation-for="Input" class="validation-message"></span>
                </div>

                <div class="form-floating-custom">
                    <input asp-for="Password"
                           type="password"
                           id="loginPass"
                           class="form-control-custom"
                           placeholder="Mật khẩu"
                           required />
                    <i class="fas fa-lock input-icon"></i>
                    <i class="fas fa-eye password-toggle" onclick="togglePass('loginPass', this)"></i>
                    <span asp-validation-for="Password" class="validation-message"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">Ghi nhớ</label>
                    </div>
                    <a asp-action="ForgotPassword" class="link-small">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="btn-primary-custom">Đăng Nhập</button>
            </form>

            <div class="divider">
                <span>Hoặc tiếp tục với</span>
            </div>
            <div class="d-grid gap-2 mb-2">
                <a asp-action="GoogleLogin" class="btn btn-outline-secondary" style="border-radius: 14px; height: 46px; display:flex; align-items:center; justify-content:center;">
                    <i class="fab fa-google me-2"></i> Đăng nhập với Google
                </a>
            </div>

            <p class="mt-3 mb-0" style="font-size:0.85rem; color:#64748b;">
                Chưa có tài khoản?
                <a asp-action="Register" class="link-small">Đăng ký ngay</a>
            </p>
        </div>
    </div>

    <script>
        function togglePass(inputId, icon) {
            const input = document.getElementById(inputId);
            const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
            input.setAttribute('type', type);
            if (type === 'text') {
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        // Remember account với localStorage
        function loadRememberedAccount() {
            const storedAccount = localStorage.getItem('laptopstore_login_account');
            const storedRemember = localStorage.getItem('laptopstore_login_remember') === 'true';

            if (storedAccount) {
                const input = document.getElementById('loginInput');
                const rememberCheckbox = document.getElementById('rememberMe');
                input.value = storedAccount;
                rememberCheckbox.checked = storedRemember;
            }
        }

        function setupRememberMe() {
            const form = document.querySelector('form');
            if (!form) return;

            form.addEventListener('submit', function () {
                const input = document.getElementById('loginInput');
                const rememberCheckbox = document.getElementById('rememberMe');

                if (rememberCheckbox.checked) {
                    localStorage.setItem('laptopstore_login_account', input.value.trim());
                    localStorage.setItem('laptopstore_login_remember', 'true');
                } else {
                    localStorage.removeItem('laptopstore_login_account');
                    localStorage.removeItem('laptopstore_login_remember');
                }
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            loadRememberedAccount();
            setupRememberMe();
        });
    </script>
</body>
</html>
