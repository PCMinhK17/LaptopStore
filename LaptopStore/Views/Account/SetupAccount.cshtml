@model LaptopStore.Models.ViewModels.SetupAccountViewModel
@{
    ViewData["Title"] = "Thiết lập tài khoản";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LaptopStore</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #FF6B6B 0%, #556270 100%);
            --bg-base: #f8fafc;
            --glass-bg: rgba(255, 255, 255, 0.95);
            --glass-border: 1px solid rgba(255, 255, 255, 0.5);
            --shadow-lg: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }

        body {
            font-family: 'Plus Jakarta Sans', system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
            background: #0f172a url('https://images.unsplash.com/photo-1517694712202-14dd9538aa97?auto=format&fit=crop&w=1920&q=80') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        body::before {
            content: '';
            position: fixed;
            inset: 0;
            background: rgba(15, 23, 42, 0.6);
            backdrop-filter: blur(10px);
        }

        .auth-wrapper {
            position: relative;
            z-index: 10;
            width: 100%;
            max-width: 600px;
            height: auto;
            min-height: 500px;
            display: flex;
            border-radius: 30px;
            background: var(--glass-bg);
            border: var(--glass-border);
            box-shadow: var(--shadow-lg);
            overflow: hidden;
            animation: slideUp 0.6s ease-out;
            flex-direction: column;
        }

        .auth-header-custom {
            background: var(--primary-gradient);
            padding: 40px;
            text-align: center;
            color: white;
        }

         .laptop-icon-large {
            font-size: 3.5rem;
            margin-bottom: 1rem;
            filter: drop-shadow(0 15px 30px rgba(0, 0, 0, 0.25));
            animation: float 6s ease-in-out infinite;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .auth-form-container {
            width: 100%;
            padding: 40px 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .auth-title {
            font-size: 1.6rem;
            font-weight: 700;
            margin-bottom: 4px;
            color: #0f172a;
            text-align: center;
        }

        .auth-subtitle {
            font-size: 0.9rem;
            color: #64748b;
            margin-bottom: 24px;
            text-align: center;
        }

        .form-floating-custom {
            position: relative;
            margin-bottom: 22px;
        }

        .form-control-custom {
            width: 100%;
            height: 52px;
            padding: 12px 16px 12px 52px;
            border: 2px solid #e2e8f0;
            border-radius: 16px;
            background: #f8fafc;
            font-size: 0.95rem;
            transition: all 0.2s ease;
        }

        .form-control-custom:focus {
            background: #ffffff;
            border-color: #556270;
            box-shadow: 0 0 0 3px rgba(85, 98, 112, 0.18);
            outline: none;
        }

        .input-icon {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            pointer-events: none;
        }
        
         .password-toggle {
            position: absolute;
            right: 16px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #94a3b8;
            padding: 4px;
        }

        .password-toggle:hover {
            color: #64748b;
        }


        .btn-primary-custom {
            width: 100%;
            height: 50px;
            border-radius: 16px;
            border: none;
            background: var(--primary-gradient);
            color: #fff;
            font-weight: 600;
            font-size: 1rem;
            margin-top: 8px;
            box-shadow: 0 14px 30px rgba(85, 98, 112, 0.45);
            transition: transform 0.15s ease, box-shadow 0.15s ease;
        }

        .btn-primary-custom:hover {
            transform: translateY(-1px);
            box-shadow: 0 18px 40px rgba(85, 98, 112, 0.55);
        }

        .validation-message {
            color: #ef4444;
            font-size: 0.78rem;
            margin-top: 4px;
            display: block;
        }

        .auth-user-info {
            background: #f1f5f9;
            padding: 12px;
            border-radius: 12px;
            text-align: center;
            margin-bottom: 24px;
            font-size: 0.9rem;
            color: #475569;
        }
        
        .auth-user-info strong {
            color: #0f172a;
        }

        @@keyframes float {
            0% { transform: translateY(0); }
            50% { transform: translateY(-12px); }
            100% { transform: translateY(0); }
        }

        @@keyframes slideUp {
            from { opacity: 0; transform: translateY(40px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body>
    <div class="auth-wrapper">
        <div class="auth-header-custom">
            <i class="fas fa-key laptop-icon-large"></i>
            <h2>Thiết lập mật khẩu</h2>
        </div>

        <div class="auth-form-container">
            <p class="auth-subtitle">Chào mừng bạn đến với LaptopStore!</p>
            
            <div class="auth-user-info">
                Tài khoản: <strong>@Model.Email</strong>
            </div>

            <form asp-action="SetupAccount" method="post">
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />

                @if (!ViewData.ModelState.IsValid)
                {
                    <div style="color: #ef4444; background: #fee2e2; padding: 10px; border-radius: 8px; margin-bottom: 15px; font-size: 0.9rem;">
                        <i class="fas fa-exclamation-circle me-1"></i>
                        Vui lòng kiểm tra lại thông tin.
                    </div>
                }

                <div class="form-floating-custom">
                    <input asp-for="NewPassword"
                           type="password"
                           id="newPass"
                           class="form-control-custom"
                           placeholder="Mật khẩu mới"
                           required />
                    <i class="fas fa-lock input-icon"></i>
                    <i class="fas fa-eye password-toggle" onclick="togglePass('newPass', this)"></i>
                    <span asp-validation-for="NewPassword" class="validation-message"></span>
                    <div class="form-text text-muted small mt-1" style="font-size: 0.75rem; color: #64748b; margin-left: 4px; margin-top: 5px;">
                        <i class="fas fa-info-circle me-1"></i>Tối thiểu 8 ký tự, gồm chữ hoa, thường, số và ký tự đặc biệt.
                    </div>
                </div>

                <div class="form-floating-custom">
                    <input asp-for="ConfirmPassword"
                           type="password"
                           id="confirmPass"
                           class="form-control-custom"
                           placeholder="Xác nhận mật khẩu"
                           required />
                    <i class="fas fa-shield-alt input-icon"></i>
                    <i class="fas fa-eye password-toggle" onclick="togglePass('confirmPass', this)"></i>
                    <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
                </div>

                <button type="submit" class="btn-primary-custom" id="btnSubmit">
                    <span class="btn-text">Kích hoạt tài khoản</span>
                    <span class="btn-loading" style="display: none;">
                        <i class="fas fa-spinner fa-spin me-2"></i>Đang xử lý...
                    </span>
                </button>
            </form>
            
            <p class="mt-4 mb-0 text-center" style="font-size:0.85rem; color:#64748b;">
                Đã có tài khoản?
                <a href="@Url.Action("Login")" style="color: #64748b; text-decoration: underline;">Đăng nhập</a>
            </p>
        </div>
    </div>

    <script>
        function togglePass(inputId, icon) {
            const input = document.getElementById(inputId);
            const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
            input.setAttribute('type', type);
            if (type === 'text') {
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        document.querySelector('form').addEventListener('submit', function(e) {
            const btn = document.getElementById('btnSubmit');
            const btnText = btn.querySelector('.btn-text');
            const btnLoading = btn.querySelector('.btn-loading');
            
            // Basic client side check
            const form = $(this);
            if(form.valid && !form.valid()) return;

            btn.disabled = true;
            btnText.style.display = 'none';
            btnLoading.style.display = 'inline';
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
