@model List<LaptopStore.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<style>
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 20px;
    }

    .product-card {
        border: 1px solid #eee;
        padding: 12px;
        background: #fff;
        transition: all 0.2s;
    }

        .product-card:hover {
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            transform: translateY(-2px);
        }

    .product-image img {
        width: 100%;
        height: 160px;
        object-fit: contain;
    }

    .product-price {
        color: red;
        font-size: 20px;
        font-weight: bold;
        margin-top: 8px;
    }

    .product-name {
        font-size: 14px;
        margin-top: 5px;
        color: #333;
        min-height: 40px;
    }
</style>

<div class="product-grid">
    @foreach (var item in Model)
    {
        var thumbnail = item.ProductImages?
        .FirstOrDefault(i => i.IsThumbnail == true)?.ImageUrl
        ?? "/images/no-image.png";

        <div class="product-card">
            <div class="product-image">
                <img src="@thumbnail" alt="@item.Name" />
            </div>

            <div class="product-price">
                @String.Format("{0:N0} ₫", item.Price)
            </div>

            <div class="product-name">
                @item.Name
            </div>
        </div>
    }
</div>
