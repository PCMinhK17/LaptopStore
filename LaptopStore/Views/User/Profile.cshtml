@model LaptopStore.Models.User

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #f5f6f7;
    }

    .profile-sidebar .list-group-item {
        border: none;
        cursor: pointer;
        font-size: 14px;
    }

    .profile-sidebar .list-group-item.active {
        background-color: #fff0f0;
        color: #d70018;
        font-weight: 600;
    }

    .profile-card {
        border-radius: 10px;
    }

    .profile-label {
        width: 200px;
        color: #6c757d;
    }

    .avatar {
        width: 90px;
        height: 90px;
        background: #ffe3d5;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: auto;
        font-size: 30px;
        color: #ff6a00;
    }
</style>

<div class="container mt-4">
    <div class="row">

        <!-- LEFT SIDEBAR -->
        <div class="col-md-3">
            <div class="card profile-sidebar shadow-sm">
                <div class="card-body text-center">
                    <h6 class="fw-bold mb-0">@Model.FullName</h6>
                    <small class="text-muted">@Model.PhoneNumber</small>
                </div>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item active">Thông tin cá nhân</li>
                    <li class="list-group-item">Đơn hàng của tôi</li>
                    <li class="list-group-item">Thông báo của tôi</li>
                    @* <li class="list-group-item text-danger">Đăng xuất</li> *@
                </ul>
            </div>
        </div>

        <!-- RIGHT CONTENT -->
        <div class="col-md-9">

            <!-- VIEW PROFILE -->
            @if (ViewBag.EditMode == null)
            {
                <div class="card profile-card shadow-sm p-4">
                    <h5 class="fw-bold mb-4">Thông tin cá nhân</h5>

                    <table class="table table-borderless">
                        <tr>
                            <td class="profile-label">Họ và tên</td>
                            <td class="fw-semibold">@Model.FullName</td>
                        </tr>
                        <tr>
                            <td class="profile-label">Số điện thoại</td>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                        <tr>
                            <td class="profile-label">Email</td>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <td class="profile-label">Địa chỉ</td>
                            <td>@Model.Address</td>
                        </tr>
                    </table>

                    @* <a href="/User/Profile/@Model.Id?edit=true" *@
                    <a href="/User/Profile?edit=true"
                       class="btn btn-danger px-4">
                        Chỉnh sửa thông tin
                    </a>
                </div>
            }

            <!-- EDIT PROFILE -->
            @if (ViewBag.EditMode != null)
            {
                <div class="card profile-card shadow-sm p-4">
                    <h5 class="fw-bold mb-4">Chỉnh sửa thông tin</h5>

                    <form method="post" action="/User/Profile">
                        <input type="hidden" name="Id" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label">Họ và tên</label>
                            <input name="FullName" class="form-control" value="@Model.FullName" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Số điện thoại</label>
                            <input name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input class="form-control" value="@Model.Email" disabled />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Địa chỉ</label>
                            <input name="Address" class="form-control" value="@Model.Address" />
                        </div>

                        <div class="d-flex gap-3">
                            <button class="btn btn-danger px-4">Lưu</button>
                            @* <a href="/User/Profile/@Model.Id" *@
                            <a href="/User/Profile"
                               class="btn btn-outline-secondary px-4">
                                Hủy
                            </a>
                        </div>
                    </form>
                </div>
            }

        </div>
    </div>
</div>
