                            <td class="fw-semibold">@Model.FullName</td>
                        </tr>
                        <tr>
                            <td class="profile-label">Số điện thoại</td>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                        <tr>
                            <td class="profile-label">Email</td>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <td class="profile-label">Địa chỉ</td>
                            <td>@Model.Address</td>
                        </tr>
                        <tr>
                            <td>Mật khẩu</td>
                            <td>  
                                <div class="input-group" style="max-width: 250px;">
                                    <input type="password" id="viewPassword" class="form-control" value="@Model.Password" readonly />
                                    <button class="input-group-text" style="cursor:pointer"
