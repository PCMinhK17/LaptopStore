                        <div class="mb-3">
                            <label class="form-label">Họ và tên</label>
                            <input name="FullName" class="form-control" value="@Model.FullName" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Số điện thoại</label>
                            <input name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input class="form-control" value="@Model.Email" disabled />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Địa chỉ</label>
                            <input name="Address" class="form-control" value="@Model.Address" />
                        </div>
                        <hr class="my-4">
                        <h6 class="fw-bold mb-3">Đổi mật khẩu</h6>
<div class="mb-3">
    <label>Mật khẩu mới</label>
    <div class="input-group">
        <input type="password" class="form-control" id="password"
               placeholder="Nhập mật khẩu mới">
        <span class="input-group-text" style="cursor:pointer"
              onclick="togglePassword('password', this)">👁️</span>
    </div>
    <small class="text-muted">
        Ít nhất 8 ký tự, gồm chữ hoa, chữ thường, số và ký tự đặc biệt
    </small>
</div>

<div class="mb-3">
    <label>Xác nhận mật khẩu</label>
    <div class="input-group">
        <input type="password" class="form-control" id="confirmPassword"
               placeholder="Nhập lại mật khẩu">
        <span class="input-group-text" style="cursor:pointer"
              onclick="togglePassword('confirmPassword', this)">👁️</span>
    </div>
    <div id="passwordError" class="text-danger mt-1" style="display:none;"></div>
</div>

                        <div class="d-flex gap-3">
                            <button class="btn btn-danger px-4">Lưu</button>
                            @* <a href="/User/Profile/@Model.Id" *@
                            <a href="/User/Profile"
                               class="btn btn-outline-secondary px-4">
                                Hủy
                            </a>
                        </div>
                    </form>
                </div>
            }

        </div>
    </div>
</div>
